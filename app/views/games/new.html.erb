<h1>New Game</h1>
<p class="show"><%= @letters.join(' ') %></p>
<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
    <label for="question">What is the longest word you can find?:</label>
    <div class="d-flex">
      <input class="wide" type="text" name="word">
      <input type="submit" value="Play" class="btn btn-primary">
    </div>
  </form>
